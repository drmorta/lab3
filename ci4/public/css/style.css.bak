* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    
}
a{
    font-family: "Sofia Sans", sans-serif;
    font-weight: 500;
    font-size: 16px;
    color: white;
    text-decoration: none;
}
h2 {
    display: block;
    font-size: 1.5em;
    margin-block-start: 0.83em;
    margin-block-end: 0.83em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
}

li {
display: list-item;
text-align: -webkit-match-parent;
}
ul {
    display: block;
    list-style-type: disc;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    padding-inline-start: 100px ;
}

header {
    display: flex;  
    align-items: center;
    padding: 5px 45px;
    background-color: #114B5F;
}
.nav_link {
    list-style: none;
    text-align: right;
}

.nav_link li {
    display: inline-block;
    margin-top: 10px;
    padding: 1px 20px;
    
}

.nav_link li a {
    transition: all 0.3s ease 0s;
}
.nav_link li a:hover {
    color: #4DAEA8;
    cursor: pointer;
}

/* Welcome */

.WelcomeSection {
    display: grid;
    place-items: center;
    align-content: center;
    min-height: 80vh;
    background-size: cover;
    background-color: #028090;
}


.Welcome {
    text-decoration: none;
    font-family: "Sofia Sans", sans-serif;
    font-weight: 500;
    font-size: 100PX;
    color: #E4FDE1;
}

/* About */


.AboutSection {
    display: grid;
    place-items: center;
    vertical-align: text-top;
    align-content: center;
    background-color: #456990;
    min-height: 60vh;
    padding-bottom: 5%;
}

.title {
    margin: 4rem 0 5rem 0;
    text-align: center;
  }
  
.title h1 {
    font-size: 55px;
    font-weight: bold;
    display: inline-block;
    position: relative;
    font-family: "Sofia Sans", sans-serif;
    z-index: 0;
    color: white;
}

.AboutMeSection {
    display: grid;
    align-items: center;
    padding-left: 5%;
    padding-right: 5%;
    grid-template-columns: 1fr 1fr;
    gap: 8rem;
    background-color: #456990 ;
   
}

.AboutMeSection img {
    height: auto;
    width: 500px;
}

.AboutMeSection p {
    text-decoration: none;
    font-family: "Sofia Sans", sans-serif;
    font-weight: 300;
    color: white;
    background-color: #456990;
    inline-size: 400px;
    overflow-wrap: break-word;
}

.AboutMeSection h1 {
    text-decoration: none;
    font-family: "Sofia Sans", sans-serif;
    font-weight: 400;
    color: white;
    background-color: #456990;
}
.SampleSection {
    display: grid;
    place-items: center;
    align-content: center;
    min-height: 80vh;
    background-size: cover;
    background-color: #5c77aa;
}

span{
    color: white;
}

/* Contact me */
.contactSection {
    display: grid;
    place-items: center;
    vertical-align: text-top;
    align-content: center;
    min-height: 60vh;
    background-color: #4d7894;
    padding-bottom: 5%;
}

.ContactMeTitle {
    margin: 4rem 0 5rem 0;
    text-align: center;
    background-color: #4d7894;

}

.ContactSection h2 {
    font-size: 3rem;
    font-weight: 450;
    display: inline-block;
    position: relative;
    font-family: "Sofia Sans", sans-serif;
    z-index: 0;
    color: white;
}


.ContactMe {
    display: grid;
    align-items: center;
    padding-left: 5%;
    padding-right: 5%;
    grid-template-columns: 1fr 1fr;
    gap: 10rem;
    background-color: #4d7894;
}

/* Contact Description */
.ContactMeDescription{
    display: grid;
    align-items: center;
    padding-left: 5%;
    padding-right: 5%;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    background-color: #4d7894;
}

.ContactMeDescription h2{
    text-decoration: none;
    font-family: "Sofia Sans", sans-serif;
    font-weight: 400;
    color: white;
    background-color: #7B6D5b;

}

